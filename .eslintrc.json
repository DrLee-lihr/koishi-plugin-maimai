{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint-config-alloy/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "typescript","import","n","promise"
    ],
    "rules": {
        "camelcase":"off",
        "no-unused-vars":"off",
        "no-redeclare":"off",
        "eqeqeq":"warn",
        "new-cap":"off",
        "brace-style":[
            "error","stroustrup",{ "allowSingleLine": true }
        ]
    }
}
